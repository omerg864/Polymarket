{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "**/*.ejs", "outDir": "dist/server/src" },
      {
        "include": "i18n/**/*",
        "outDir": "dist/server/src",
        "watchAssets": true
      }
    ]
  }
}
